@{
    ViewData["Title"] = "Calculation Page";
}

@model CalculationModel;

<h3>Grade Calculator</h3>
<!--Grade Calculator Form Tag-->
<form method="post">
    <label>Assignment Grade:</label>
    <input id="assignment" asp-for="Assignment" /><br />
    <label>Group Project Grade:</label>
    <input id="groupProject" asp-for="GroupProject"/><br />
    <label>Quizzes Grade:</label>
    <input id="quiz" asp-for="Quiz"/><br />
    <label>Midterm Grade:</label>
    <input id="midterm" asp-for="Midterm"/><br />
    <label>Final Grade:</label>
    <input id="final" asp-for="Final"/><br />
    <label>INTEX Grade:</label>
    <input id="intex" asp-for="Intex"/><br />
    <input id="btnCalc" type="submit" value="Make Calculation" /> <br /><br />
    <p id="output"></p>

    <div asp-validation-summary="All"></div>
</form>
<br />
<br />

<script src="~/js/script.js"></script>